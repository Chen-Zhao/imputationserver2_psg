/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.
    Use as follows:
        nextflow run main.nf -profile test,development
----------------------------------------------------------------------------------------
*/

params {
    project                 = "test-job2"
    build = "hg19"
    files                   = "/Users/lukfor/Data/projects/humangen/breast-pgs/output/genotyped/vcf/*.vcf.gz"
    population = "eur"
    password = "lukas"
    mode = "imputation"
    refpanel = [
        id: "hapmap2",
        samples: [
            eur: '60',
            mixed: -1
        ],
        populations: [
            eur: 'EUR',
            mixed: 'Mixed'
        ],
        legend: 'tests/hapmap-2/2.0.0/legends/hapmap_r22.chr$chr.CEU.hg19_impute.legend.gz',
        hdfs: 'DUMMY',
        build: 'hg19'
    ]
    ancestry = [
        enabled: true,
        references: '/Users/lukfor/Data/laser/references/HGDP_938_genotyped/*',
        dim: 8,
        max_pcs: 4,
        k: 20,
        threshold: 0.875
    ]
    output = "output/single"
}

executor {
	cpus = 1
}
